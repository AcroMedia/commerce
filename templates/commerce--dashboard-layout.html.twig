{#
/**
 * @file
 * Dashboard layout template.
 *
 * @ingroup themeable
 */
#}
<div class="commerce-dashboard">
  <div id="commerce-wizard-progress">
    <div> {{ 'Placeholder for commerce_wizard progress'|t }}</div>
  </div>

  {% for group in groups %}
    <div class="commerce-dashboard__group">
      <h2 class="commerce-dashboard__group-title" aria-label="{{ group.title }}">
        {{ group.title }}
      </h2>
      <div class="commerce-dashboard__items">
        {% for item in group %}
          {# Check for item class to only render out items we want to display. #}
          {% if item.class %}
            <div class="commerce-dashboard__item commerce-dashboard__item--{{ item.class }}">
              {# Alert icon. #}
              {# TODO: Set alert via twig variable. Here now just for styling. #}
              <a href="http://google.com" class="commerce-dashboard__item-alert">?</a>

              {# Dashboard item link. #}
              <a
                href="{{ item.url.toString }}"
                class="commerce-dashboard__item-link"
                aria-label="{{ item.title }}"
              >
                <div class="commerce-dashboard__item-icon"></div>
                <h3 class="commerce-dashboard__item-title">{{ item.title }}</h3>
                <div class="commerce-dashboard__item-description">{{ item.description }}</div>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endfor %}
</div>
